<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="XFShellFlyoutSample.View.TodoListPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Shell.TitleView>
        <StackLayout>
            <Image
                x:Name="TitleImage"
                HeightRequest="40"
                HorizontalOptions="CenterAndExpand"
                Source="myicon.png"
                VerticalOptions="CenterAndExpand" />
        </StackLayout>
    </Shell.TitleView>
    <ContentPage.Content>
        <StackLayout>
            <Label HorizontalOptions="CenterAndExpand" Text="Welcome to Todo List Page!" />
            <Button Clicked="Button_Clicked" Text="Adjust Title Image Position" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>